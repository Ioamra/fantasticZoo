<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BuyEnclosureModalController">
    <Text text="Acheter un enclos" style="-fx-font-size: 18;" />
    <ChoiceBox fx:id="enclosureTypeChoiceBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Aquarium" />
                <String fx:value="Aviary" />
                <String fx:value="Terrestrial" />
            </FXCollections>
        </items>
    </ChoiceBox>
    <TextField fx:id="nameField" promptText="Nom de l'enclos" />
    <Button text="Acheter" onAction="#buyEnclosure"/>
</VBox>
